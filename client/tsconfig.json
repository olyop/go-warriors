{
	"extends": "@oly_op/tsconfig",
	"compilerOptions": {
		"skipLibCheck": true,
		"noEmit": true,
		"module": "ESNext",
		"allowJs": true,
		"moduleResolution": "Bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"jsxFactory": "createElement",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@/*": ["./src/*"]
		},
		"lib": ["DOM", "DOM.Iterable", "ESNext"]
	},
	"include": ["next-env.d.ts", "src", "public/scripts/theme-script.js", ".next/types/**/*.ts"],
	"exclude": ["node_modules"]
}
